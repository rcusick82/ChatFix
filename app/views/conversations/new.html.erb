<div class="modal fade" id="welcomeModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h5 class="modal-title text-center">Welcome To ChatFix!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-image">

      </div>
      <div class="modal-body">
        <p class="p-welcome-modal">Let me help you save time and money by answering a few simple questions.
        After that I will connect you with multiple professionals in your area that will
        respond with their availability and base service fees.  Find a local service provider
        without making a single phone call.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Let's Get Started</button>
      </div>
    </div>
  </div>
</div>



<div class="modal fade" id="twilioModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ChatFix</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-text">Please enter your phone number and zip code and I will connect you to available plumbers in your area right away.</div>
        <%= form_tag ('/conversations/generate_sms') do %>
          <%= text_field_tag :phone_number, nil, placeholder: 'Phone Number'  %><br />
          <%= text_field_tag :zip_code, nil, placeholder: 'Zip Code'  %><br />
          <%= hidden_field_tag :chat_items %>
          <%= submit_tag "Submit" %>
        <% end %>

      </div>
        <%= @transcript %>
    </div>
  </div>
</div>

<div class="chat-container d-inline-block align-middle">
  <%= react_component('Chat', watsonData: @response) %>

</div>
